---
import { ShoppingCart } from "lucide-react";
const url = Astro.url.pathname;
---

<nav class="bg-blue-600 w-full py-4 px-16">
    <ul class="text-white flex justify-between">
        <div class="flex gap-16 text-sm font-semibold">
            <li
                class=`${url === '/products' ? 'bg-blue-400' : 'bg-blue-600'} py-2 px-4 rounded-xl`
            >
                <a href="/products">Productos</a>
            </li>
            <li
                class=`${url === '/add' ? 'bg-blue-400' : 'bg-blue-600'} py-2 px-4 rounded-xl`
            >
                <a href="/add">Crear producto</a>
            </li>
        </div>
        <li
            class=`${url === '/cart' ? 'bg-blue-400' : 'bg-blue-600'} py-2 px-4 rounded-xl`
        >
            <a href="/cart">
                <ShoppingCart />
            </a>
        </li>
    </ul>
</nav>
